<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".detaFragment">

    <!-- TODO: Update blank fragment layout -->


    <RelativeLayout
        android:id="@+id/all"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="341dp"
            android:layout_height="624dp"
            android:layout_alignParentStart="true"

            android:layout_alignParentTop="true"
            android:layout_marginStart="37dp"
            android:layout_marginTop="35dp">

            <androidx.cardview.widget.CardView
                android:layout_width="344dp"
                android:id="@+id/card"
                android:layout_height="427dp"

                android:backgroundTint="@color/black">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="416dp">

                    <TextView
                        android:id="@+id/timed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="41dp"
                        android:layout_marginTop="181dp"
                        android:text="Time"
                        android:textColor="@color/white"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/genred"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="43dp"
                        android:layout_marginTop="224dp"
                        android:text="Genre"
                        android:textColor="@color/white"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="43dp"
                        android:layout_marginTop="271dp"
                        android:text="Price Range"
                        android:textColor="@color/white"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/price2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="42dp"
                        android:layout_marginTop="319dp"
                        android:text="Ticket Status"
                        android:textColor="@color/white"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/price3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="42dp"
                        android:layout_marginTop="363dp"
                        android:text="Buy ticket at"
                        android:textColor="@color/white"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/artd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="41dp"
                        android:layout_marginTop="40dp"
                        android:text="Artist/Team"
                        android:textColor="@color/white"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/vd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="43dp"
                        android:layout_marginTop="86dp"
                        android:text="Venue"
                        android:textColor="@color/white"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="43dp"
                        android:layout_marginTop="134dp"
                        android:text="Date"
                        android:textColor="@color/white"
                        android:textSize="20dp" />


                    <TextView
                        android:id="@+id/art"
                        android:layout_width="163dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:singleLine="true"
                        android:ellipsize="marquee"
                        android:marqueeRepeatLimit ="marquee_forever"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:scrollHorizontally="true"
                        android:layout_marginTop="40dp"
                        android:layout_marginEnd="12dp"
                        android:text="TextView"
                        android:textColor="#4CAF50"
                        android:textSize="20dp" />

                    <ScrollView
                        android:layout_width="200dp"
                        android:layout_height="32dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="82dp"
                        android:layout_marginEnd="11dp">

                        <TextView
                            android:id="@+id/venuem"
                            android:layout_width="200dp"
                            android:layout_height="32dp"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"

                            android:text="TextView"
                            android:textColor="#4CAF50"
                            android:textSize="20dp" />
                    </ScrollView>

                    <TextView
                        android:id="@+id/datem"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="128dp"
                        android:layout_marginEnd="80dp"
                        android:text="TextView"
                        android:textColor="#4CAF50"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/timem"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="180dp"
                        android:layout_marginEnd="80dp"
                        android:text="TextView"
                        android:textColor="#4CAF50"
                        android:textSize="20dp" />

                    <HorizontalScrollView
                        android:layout_width="132dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="225dp"
                        android:layout_marginEnd="35dp">

                        <TextView
                            android:id="@+id/genrem"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"

                            android:text="TextView"
                            android:textColor="#4CAF50"
                            android:textSize="20dp" />
                    </HorizontalScrollView>

                    <TextView
                        android:id="@+id/pricem"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="271dp"
                        android:visibility="invisible"
                        android:layout_marginEnd="78dp"
                        android:text="TextView"
                        android:textColor="#4CAF50"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="318dp"
                        android:layout_marginEnd="75dp"
                        android:text="TextView"
                        android:textColor="#4CAF50"
                        android:textSize="20dp" />


                    <TextView
                        android:id="@+id/buy"
                        android:layout_width="143dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="30dp"
                        android:ellipsize="marquee"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:linksClickable="true"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        android:text="Buy"
                        android:textColor="#4CAF50"
                        android:textSize="20dp" />


                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="332dp"
                android:layout_height="180dp"

                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="3dp"
                android:layout_marginBottom="13dp"
                android:src="@drawable/facebook" />

        </RelativeLayout>

    </RelativeLayout>
</FrameLayout>