<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".SearchFragment">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  >

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="669dp"
      android:visibility="visible"
      >

    <RelativeLayout
        android:id="@+id/form"
        android:layout_width="302dp"
        android:layout_height="494dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="68dp"
        android:background="#000000">

      <TextView
          android:id="@+id/textView4"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentStart="true"
          android:layout_alignParentTop="true"
          android:layout_marginStart="18dp"
          android:layout_marginTop="29dp"
          android:text="Keywords*"

          android:textColor="#19B821"
          android:textSize="22sp" />

      <TextView
          android:id="@+id/textView5"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentStart="true"
          android:layout_alignParentTop="true"
          android:layout_marginStart="22dp"
          android:layout_marginTop="117dp"
          android:text="Distance(Miles)*"
          android:textColor="#19B821"
          android:textSize="22sp" />

      <TextView
          android:id="@+id/textView6"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentStart="true"
          android:layout_alignParentTop="true"
          android:layout_marginStart="22dp"
          android:layout_marginTop="206dp"
          android:text="Category"
          android:textColor="#19B821"
          android:textSize="22sp" />

      <TextView
          android:id="@+id/textView7"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentStart="true"
          android:layout_alignParentTop="true"
          android:layout_marginStart="21dp"
          android:layout_marginTop="279dp"
          android:text="Location*"
          android:textColor="#19B821"
          android:textSize="22sp" />


      <EditText
          android:id="@+id/loc"
          android:layout_width="261dp"
          android:layout_height="wrap_content"
          android:layout_alignParentTop="true"
          android:layout_alignParentEnd="true"
          android:layout_marginTop="324dp"
          android:layout_marginEnd="21dp"
          android:hint="Enter the location"
          android:backgroundTint="@android:color/holo_green_light"
          android:shadowColor="#FFFFFF"
          android:singleLine="true"
          android:textColor="#FFFFFF"
          android:textColorHint="#FFFFFF"
          android:visibility="visible" />

      <EditText
          android:id="@+id/dis"
          android:layout_width="261dp"
          android:layout_height="wrap_content"
          android:layout_alignParentTop="true"
          android:layout_alignParentEnd="true"
          android:layout_marginTop="153dp"
          android:layout_marginEnd="20dp"
          android:backgroundTint="@android:color/holo_green_light"
          android:text="10"
          android:textColor="#FFFFFF" />

      <Spinner
          android:id="@+id/spinner"
          android:layout_width="280dp"
          android:layout_height="wrap_content"
          android:layout_alignParentTop="true"
          android:layout_alignParentEnd="true"
          android:layout_marginTop="242dp"
          android:backgroundTint="@android:color/holo_green_light"
          android:layout_marginEnd="0dp"
          android:spinnerMode="dropdown" />

      <Switch
          android:id="@+id/switch1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
        android:layout_marginTop="280dp"
          android:layout_marginStart="150dp"
          android:layout_marginEnd="25dp"
          android:layout_marginBottom="186dp"
          android:text="Auto-Detect"
          android:textColor="#19B821" />
      <!--            <EditText-->
      <!--                android:id="@+id/key"-->
      <!--                android:layout_width="261dp"-->
      <!--                android:layout_height="wrap_content"-->
      <!--                android:layout_alignParentTop="true"-->
      <!--                android:layout_alignParentEnd="true"-->
      <!--                android:layout_marginTop="63dp"-->
      <!--                android:layout_marginEnd="20dp"-->
      <!--                android:hint="Enter the keywords"-->
      <!--                android:textColor="#FFFFFF" />-->
      <Button
          android:id="@+id/submit"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="400dp"
          android:layout_marginStart="49dp"
          android:layout_marginBottom="54dp"
          android:backgroundTint="#35CD30"
          android:text="Search" />

      <Button
          android:id="@+id/clear"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="400dp"
          android:layout_marginStart="150dp"
          android:layout_marginEnd="53dp"
          android:backgroundTint="#ffa500"
          android:layout_marginBottom="54dp"
          android:text="Clear" />

      <AutoCompleteTextView
          android:id="@+id/key"
          android:layout_width="265dp"
          android:layout_height="wrap_content"
          android:layout_alignParentStart="true"
          android:layout_alignParentTop="true"
          android:layout_marginStart="18dp"
          android:layout_marginTop="63dp"
          android:backgroundTint="@android:color/holo_green_light"
          android:hint="Enter the keywords"
          android:singleLine="true"
          android:textColor="#FFFFFF"
          android:textColorHint="#FFFFFF" />
      <TextView
          android:id="@+id/selected_item"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@id/key"
          android:layout_marginTop="50dp"
          android:padding="20dp"/>



    </RelativeLayout>





  </RelativeLayout>
  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
    android:orientation="horizontal"
      android:visibility="invisible"
      android:id="@+id/backlayout"
      android:clickable="true"
      >
  <ImageView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
    android:src="@drawable/ic_baseline_arrow_back_24"
      android:layout_marginTop="15dp"
      android:id="@+id/backtoi">

  </ImageView>
    <TextView
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Back to Search"

        android:id="@+id/backto"
        android:layout_marginTop="15dp"
        ></TextView>


  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        android:layout_marginTop="40dp"
        android:id="@+id/scroll"
        >

      <androidx.recyclerview.widget.RecyclerView
          android:layout_width="match_parent"
          android:layout_height="match_parent"

          android:id="@+id/reslayout">

      </androidx.recyclerview.widget.RecyclerView>
    </ScrollView>
  </LinearLayout>



</RelativeLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="invisible"
    android:id="@+id/pblayout">
  <ProgressBar
      android:id="@+id/progressBar"
      style="?android:attr/progressBarStyle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"


      android:layout_centerHorizontal="true"
      android:layout_centerVertical="true"/>


</RelativeLayout>
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:visibility="invisible"
      android:id="@+id/nrlayout">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="No results found"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:background="#8C8B8B"
    android:textSize="24sp"
    android:textColor="#000000"></TextView>


  </RelativeLayout>
</FrameLayout>